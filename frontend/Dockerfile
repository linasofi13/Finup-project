# Etapa 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar dependencias e instalar
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Copiar el resto del c칩digo (incluyendo .env si est치 en contexto)
COPY . .

# Construir aplicaci칩n Next.js
RUN npm run build

# Etapa 2: Producci칩n
FROM node:20-alpine

WORKDIR /app

# Copiar artefactos del build
COPY --from=builder /app ./

ENV NODE_ENV=production

EXPOSE 3000

CMD ["npm", "start"]
